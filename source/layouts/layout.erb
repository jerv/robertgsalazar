<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Neuromodulation Specialist" %></title>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>

    <!-- favicon -->

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

    <link href='http://fonts.googleapis.com/css?family=Rufina:400,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Sintony:400,700' rel='stylesheet' type='text/css'>
  </head>

  <body class="<%= page_classes %>">
    <!-- 
    NAVIGATION
    ////////////////////////////////////////////////////////////////////
    -->
    <section id="nav">
      <div class="stripes">
        <div>&nbsp;</div>
        <div>&nbsp;</div>
        <div>&nbsp;</div>
        <div>&nbsp;</div>
        <div>&nbsp;</div>
      </div>
      <div class="container">
        <% link_to '/', :class=>'siteid' do %>
          <h2>
            R<span>obert</span> G. S<span>alazar</span> M.D.
          </h2>
          <h3>Neuromodulation Specialist</h3>
        <% end %>
        <section class="cta">
          <h5>559-432-6807</h5>         
          <%= link_to 'Contact', 'contact', :class=>'button' %>
          <%= link_to 'Become a Patient', 'patient-info', :class=>'button button-primary' %>
        </section>
      </div>
      <nav>
        <i id="toggleMenu" class="fa fa-bars"></i>
        <div class="container">
          <ul>
            <li><%= link_to 'Neuromodulation Therapy', 'neuromodulation-therapy' %></li>
            <li><%= link_to 'Our Location', 'location' %></li>
            <li class="sub">
              <%= link_to 'About us', 'about' %>
              <ul>
                <li><%= link_to 'William Salazar', 'salazar' %></li>
                <li><%= link_to 'Robert Johncox', 'johncox' %></li>
                <li><%= link_to 'AIT Laboratories', 'american-institute-of-toxicology' %></li>
              </ul>
            </li>
            <li class="sub">
              <%= link_to 'Get Started', 'patient-info' %>
              <ul>
                <li><%= link_to 'Patient Info', 'patient-info' %></li>
                <li><%= link_to 'Contact Us', 'contact' %></li>
              </ul>
            </li>
          </ul>
        </div>
      </nav>
    </section>
    <!-- 
    PAGE CONTENT 
    ////////////////////////////////////////////////////////////////////
    -->
    <%= yield %>
    <!-- 
    FOOTER 
    ////////////////////////////////////////////////////////////////////
    -->
    <footer>
      <div class="container">
        <div>Icons made by <a href="http://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a> from <a href="http://www.flaticon.com" title="Flaticon">www.flaticon.com</a>             is licensed by <a href="http://creativecommons.org/licenses/by/3.0/" title="Creative Commons BY 3.0">CC BY 3.0</a></div>
      </div>
    </footer>

  </body>
</html>
